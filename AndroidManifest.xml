<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jraf.android.networkmonitor"
    android:versionCode="1503"
    android:versionName="1.5.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name="org.jraf.android.networkmonitor.app.NetMonApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name=".provider.NetMonProvider"
            android:authorities="org.jraf.android.networkmonitor.provider"
            android:exported="false" />

        <service android:name="org.jraf.android.networkmonitor.app.service.NetMonService" />

        <activity
            android:name="org.jraf.android.networkmonitor.app.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.jraf.android.networkmonitor.app.log.LogActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:label="@string/log_title"
            android:parentActivityName="org.jraf.android.networkmonitor.app.main.MainActivity" >
            <intent-filter>
                <action android:name="org.jraf.android.networkmonitor.app.log.LogActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.jraf.android.networkmonitor.app.main.MainActivity" />
        </activity>
        <activity
            android:name="org.jraf.android.networkmonitor.app.about.AboutActivity"
            android:exported="false"
            android:label="@string/about_title"
            android:parentActivityName="org.jraf.android.networkmonitor.app.main.MainActivity" >
            <intent-filter>
                <action android:name="org.jraf.android.networkmonitor.app.about.AboutActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.jraf.android.networkmonitor.app.main.MainActivity" />
        </activity>
        <activity
            android:name="org.jraf.android.networkmonitor.app.prefs.AdvancedPreferencesActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:label="@string/pref_title_advanced"
            android:parentActivityName="org.jraf.android.networkmonitor.app.main.MainActivity" >
            <intent-filter>
                <action android:name="org.jraf.android.networkmonitor.app.prefs.AdvancedPreferencesActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.jraf.android.networkmonitor.app.main.MainActivity" />
        </activity>
        <activity
            android:name="org.jraf.android.networkmonitor.app.prefs.SelectFieldsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:label="@string/pref_title_select_fields"
            android:parentActivityName="org.jraf.android.networkmonitor.app.prefs.AdvancedPreferencesActivity" >
            <intent-filter>
                <action android:name="org.jraf.android.networkmonitor.app.prefs.SelectFieldsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.jraf.android.networkmonitor.app.prefs.AdvancedPreferencesActivity" />
        </activity>
        <activity
            android:name="org.jraf.android.networkmonitor.app.prefs.FilterColumnActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:label="@string/filter_columns_title">
        </activity>
        <activity
            android:name="org.jraf.android.networkmonitor.app.log.LogActionsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:theme="@style/NetMonNoDisplayTheme" >
            <intent-filter>
                <action android:name="org.jraf.android.networkmonitor.app.log_share" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.jraf.android.networkmonitor.app.log_clear" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.jraf.android.networkmonitor.app.prefs.PreferenceFragmentActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:theme="@style/NetMonNoDisplayTheme" >
            <intent-filter>
                <action android:name="org.jraf.android.networkmonitor.app.prefs_import" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name="org.jraf.android.networkmonitor.app.service.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>

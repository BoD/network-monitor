<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/NetMon">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/NetMonActionBar</item>
    </style>

    <style name="NetMonActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
       <item name="android:background">@android:color/black</item>
       <item name="android:titleTextStyle">@style/NetMonActionBarTitleStyle</item>
    </style>
    
    <style name="NetMonActionBarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NetMonNoDisplayTheme" parent="@style/NetMon">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

</resources>
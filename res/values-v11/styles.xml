<resources>

    <style name="NetMonActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="android:titleTextStyle">@style/NetMonActionBarTitleStyle</item>
    </style>

    <style name="NetMonActionBarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NetMonListViewSeparatorStyle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textColor">@color/netmon_text_color</item>
        <item name="android:background">@drawable/list_section_divider_holo_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8sp</item>
    </style>

</resources>